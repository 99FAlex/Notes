<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.AddNote"
             Title="AddNote">
    <VerticalStackLayout>
        <Button BackgroundColor="Black" Margin="7" Text="Save Note"/>
        <Entry x:Name="noteName" Placeholder="Name"/>

        <Editor Placeholder="Enter your multi-line text here" AutoSize="TextChanges" HeightRequest="710" Margin="10" />


    </VerticalStackLayout>
</ContentPage>